language: java
sudo: false

cache:
    directories:
        - $HOME/.m2

services:
  - mysql

before_install:
  - mysql -e 'CREATE DATABASE IF NOT EXISTS gotztest;'

script: mvn test -Dgotz.datastore.configFile=jdoconfig-mysql.properties

after_success:
  - mvn clean test jacoco:report coveralls:report -Dgotz.datastore.configFile=jdoconfig-mysql.properties

jdk:
  - openjdk8
