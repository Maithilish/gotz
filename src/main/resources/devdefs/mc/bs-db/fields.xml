<?xml version="1.0" encoding="UTF-8"?>

<fields xmlns="http://codetab.org/gotz">
    <fields name="class" value="org.codetab.gotz.model.Locator">

        <fields name="group" value="steps">
            <fields name="step" value="seeder">
                <field name="class"
                    value="org.codetab.gotz.step.extract.LocatorSeeder" />
                <field name="nextstep" value="loader" />
                <field name="unique" value="true" />
            </fields>
            <fields name="step" value="loader">
                <field name="class"
                    value="org.codetab.gotz.step.extract.URLLoader" />
                <field name="nextstep" value="parser" />
                <field name="unique" value="true" />
            </fields>
            <fields name="step" value="parser">
                <field name="class"
                    value="org.codetab.gotz.step.extract.JSoupHtmlDataParser" />
                <field name="nextstep" value="filter" />
            </fields>
            <fields name="step" value="filter">
                <field name="class"
                    value="org.codetab.gotz.step.convert.DataFilter" />
                <field name="nextstep" value="converter" />
            </fields>
            <fields name="step" value="appender">
                <field name="class"
                    value="org.codetab.gotz.step.load.DataSetAppender" />
                <field name="nextstep" value="end" />
                <fields name="appender" value="db">
                    <field name="class"
                        value="org.codetab.gotz.appender.DbAppender" />
                </fields>
            </fields>
        </fields>

        <fields name="group" value="bs">
            <fields name="group" value="task">
                <fields name="group" value="datadef">
                    <field name="datadef" value="bs" />

                    <fields name="step" value="converter">
                        <field name="nextstep" value="appender" />
                        <field name="class"
                            value="org.codetab.gotz.step.convert.DataSetConverter" />

                        <fields name="converter" value="date">
                            <field name="class"
                                value="org.codetab.gotz.converter.DateRoller" />
                            <field name="axis" value="col" />
                            <field name="inpattern" value="MMM ''YY" />
                            <field name="outpattern" value="YYYY-MM-dd" />
                            <field name="roll" value="DAY_OF_MONTH=ceil" />
                        </fields>
                    </fields>

                    <fields name="group" value="persist">
                        <field name="document" value="true" />
                        <field name="data" value="true" />
                    </fields>
                </fields>
            </fields>
            <field name="live" value="P0D" />
        </fields>

    </fields>
</fields>
