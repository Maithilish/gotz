<?xml version="1.0" encoding="UTF-8"?>

<datadefs xmlns="http://codetab.org/gotz" xmlns:xf="http://codetab.org/xfield"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://codetab.org/gotz gotz.xsd">

    <datadef name="finlocators">
        <xf:xfield>
            <xf:member name="bs">
                <xf:group>bs</xf:group>
            </xf:member>
            <xf:member name="pl">
                <xf:group>pl</xf:group>
            </xf:member>
        </xf:xfield>

        <axis name="col">
            <xf:xfield>
                <xf:script script="configs.getRunDateTime()" />
            </xf:xfield>
            <member name="date" />
        </axis>
        <axis name="row">
            <xf:xfield>
                <xf:query region="//*[@id='quickLinkPrc']/table"
                    field="//li/a[contains(.,'%{row.match}')]" />
            </xf:xfield>
            <member name="bs" match="Balance Sheet" />
            <member name="pl" match="Profit &amp; Loss" />
        </axis>
        <axis name="fact">
            <xf:xfield>
                <xf:query region="//*[@id='quickLinkPrc']/table"
                    field="*//a[contains(.,'%{row.match}')]/@href" />
                <!-- uses local file (quote page) so no prefix  -->
                <xf:prefix></xf:prefix>
            </xf:xfield>
        </axis>
    </datadef>

    <datadef name="quotePage">
        <axis name="col">
            <xf:xfield>
                <xf:script script="document.getFromDate()" />
            </xf:xfield>
            <member name="date" />
        </axis>
        <axis name="row">
            <xf:xfield>
                <xf:query region="//*[@id='mktdet_2']"
                    field="div/div/div[starts-with(child::text(),'%{row.match}')]/child::text()" />
            </xf:xfield>
            <member name="MC" match="MARKET CAP" />
            <member name="EPS" match="EPS (TTM)" />
            <member name="PE" match="P/E" />
            <member name="PC" match="P/C" />
            <member name="BV" match="BOOK VALUE" />
            <member name="PB" match="PRICE/BOOK" />
            <member name="DIV" match="DIV (%)" />
            <member name="DY" match="DIV YIELD" />
            <member name="FV" match="FACE VALUE" />
            <member name="IND PE" match="INDUSTRY P/E" />
        </axis>
        <axis name="fact">
            <xf:xfield>
                <xf:query region="//*[@id='mktdet_2']"
                    field="div/div/div[starts-with(child::text(),'%{row.match}')]/following-sibling::div[1]" />
            </xf:xfield>
        </axis>
    </datadef>
    <datadef name="price">
        <axis name="col">
            <xf:xfield>
                <xf:script script="document.getFromDate()" />
            </xf:xfield>
            <member name="date" />
        </axis>
        <axis name="row">
            <member name="Price" value="Price" />
        </axis>
        <axis name="fact">
            <xf:xfield>
                <xf:query region="//*[@id='Nse_Prc_tick']"
                    field="strong" />
            </xf:xfield>
        </axis>
    </datadef>

    <datadef name="bs">
        <axis name="col">
            <xf:xfield>
                <xf:query
                    region="//table//*[count(*)=0 and contains(.,'Total Share Capital')]/ancestor::table[1]"
                    field="*//tr[1]/td[%{col.index}+1]" />
            </xf:xfield>
            <member name="year">
                <xf:xfield>
                    <xf:indexRange value="1-5" />
                </xf:xfield>
            </member>
        </axis>
        <axis name="row">
            <xf:xfield>
                <xf:query
                    region="//table//*[count(*)=0 and contains(.,'Total Share Capital')]/ancestor::table[1]"
                    field="*//tr[%{row.index}+1]/td[1]" />
            </xf:xfield>
            <member name="item" index="5">
                <xf:xfield>
                    <xf:breakAfter value="Book Value (Rs)" />
                </xf:xfield>
            </member>
            <filter axis="row">
                <xf:xfield>
                    <xf:filters type="value">
                        <xf:filter name="blank" pattern="" />
                        <xf:filter name="f1" pattern="Sources Of Funds" />
                        <xf:filter name="f2" pattern="Application Of Funds" />
                    </xf:filters>
                </xf:xfield>
            </filter>
        </axis>
        <axis name="fact">
            <xf:xfield>
                <xf:query
                    region="//table//*[count(*)=0 and contains(.,'Total Share Capital')]/ancestor::table[1]"
                    field="*//*[.='%{row.value}']/following-sibling::td[%{col.index}]" />
            </xf:xfield>
        </axis>
    </datadef>

    <datadef name="pl">
        <axis name="col">
            <xf:xfield>
                <xf:query
                    region="//table//*[count(*)=0 and contains(.,'Employee Cost')]/ancestor::table[1]"
                    field="*//tr[1]/td[%{col.index}+1]" />
            </xf:xfield>
            <member name="year">
                <xf:xfield>
                    <xf:indexRange value="1-5" />
                </xf:xfield>
            </member>
        </axis>
        <axis name="row">
            <xf:xfield>
                <xf:query
                    region="//table//*[count(*)=0 and contains(.,'Employee Cost')]/ancestor::table[1]"
                    field="*//tr[%{row.index}+0]/td[1]" />
            </xf:xfield>
            <member name="item" index="6">
                <xf:xfield>
                    <xf:breakAfter value="Book Value (Rs)" />
                </xf:xfield>
            </member>
            <filter axis="row">
                <xf:xfield>
                    <xf:filters type="value">
                        <xf:filter name="blank" pattern="" />
                        <xf:filter name="f1" pattern="Expenditure" />
                        <xf:filter name="f2"
                            pattern="Per share data (annualised)" />
                    </xf:filters>
                </xf:xfield>
            </filter>
        </axis>
        <axis name="fact">
            <xf:xfield>
                <xf:query
                    region="//table//*[count(*)=0 and contains(.,'Employee Cost')]/ancestor::table[1]"
                    field="*//*[.='%{row.value}']/following-sibling::td[%{col.index}]" />
            </xf:xfield>
        </axis>
    </datadef>

</datadefs>


