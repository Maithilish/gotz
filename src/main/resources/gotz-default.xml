<?xml version="1.0" encoding="UTF-8"?>

<configuration>
    <gotz>
        <propertyPattern>gotz/properties/property</propertyPattern>
        <beanFile>/bean.xml</beanFile>
        <schemaFile>/schema/gotz.xsd</schemaFile>
        <seederClass>org.codetab.gotz.ext.LocatorSeeder</seederClass>
        <datastore>
            <name>datastore</name>
            <orm>jdo</orm>
            <configFile>jdoconfig.properties</configFile>
        </datastore>
        <poolsize>
            <seeder>6</seeder>
            <loader>4</loader>
            <parser>4</parser>
            <filter>4</filter>
            <transformer>4</transformer>
            <appender>2</appender>
        </poolsize>
        <webClient>
            <timeout>120000</timeout>
            <userAgent>Mozilla/5.0</userAgent>
        </webClient>
        <highDate>31-12-2099 23:59:59.999</highDate>
        <dateParsePattern>dd-MM-yyyy ; dd/MM/yyyy</dateParsePattern>
        <dateTimeParsePattern>
            <![CDATA[
                 dd-MM-yyyy HH:mm:ss.SSS ; dd/MM/yyyy HH:mm:ss.SSS
            ]]>
        </dateTimeParsePattern>
    </gotz>
</configuration>

