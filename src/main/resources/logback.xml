<configuration>
	<appender name="FILE" class="ch.qos.logback.core.FileAppender">
		<file>logs/picks.log</file>
		<append>false</append>
		<encoder>
			<pattern>%-20(%logger{0}:%line) %-8([%level]) %msg%n</pattern>
		</encoder>
	</appender>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>INFO</level>
		</filter>
		<encoder>
			<pattern>%-20(%logger{0}:%line) %-8([%level]) %msg%n</pattern>
		</encoder>
	</appender>

	<appender name="SIFT" class="ch.qos.logback.classic.sift.SiftingAppender">
		<discriminator>
			<key>entitytype</key>
			<defaultValue>sift</defaultValue>
		</discriminator>
		<sift>
			<appender name="FILE-${entitytype}" class="ch.qos.logback.core.FileAppender">
				<file>logs/${entitytype}.log</file>
				<append>false</append>
				<layout class="ch.qos.logback.classic.PatternLayout">
					<pattern>%-15(%logger{0}:%line) %-8([%level]) %msg%n</pattern>
				</layout>
			</appender>
		</sift>
	</appender>

	<logger name="DataNucleus.JDO" level="OFF" />

	<root level="trace">
		<!-- <appender-ref ref="FILE" /> -->
		<appender-ref ref="STDOUT" />
		<appender-ref ref="FILE" />
		<appender-ref ref="SIFT" />
	</root>
</configuration>